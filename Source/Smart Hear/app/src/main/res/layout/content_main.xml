<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="capturetest.audio.com.audiocapturetest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView    android:id="@+id/text1"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Smart Hear"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:contextClickable="false"
        android:textColor="#36439a"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <ImageView

        android:id="@+id/micImage"

        android:layout_width="60dp"

        android:layout_height="60dp"

        android:src="@android:drawable/presence_audio_online"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linear1"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@+id/micImage"

        android:layout_marginTop="10dp"

        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@+id/linear1"

        android:layout_marginTop="10dp"

        android:orientation="horizontal">


        <Button

            android:id="@+id/btn_Play"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:enabled="false"

            android:text="play"
            android:onClick="playRecoderedAudio"
            android:visibility="gone" />

        <Button

            android:id="@+id/stopPlay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"

            android:enabled="false"

            android:text="stop playing"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linear3">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3"
        android:layout_alignParentStart="true"
        android:id="@+id/linear4"
        android:touchscreenBlocksFocus="false"
        android:visibility="gone">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_bandPass" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear4"
        android:layout_alignParentStart="true"
        android:id="@+id/linear5" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_highPass"
        android:layout_below="@+id/linear5"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/btn_Start"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="start"
        android:layout_below="@+id/linear2"
        android:layout_toStartOf="@+id/micImage" />

    <Button

        android:id="@+id/btn_Stop"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"

        android:enabled="false"

        android:text="stop"
        android:layout_alignTop="@+id/linear2"
        android:layout_toEndOf="@+id/micImage" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_lowPass"
        android:layout_above="@+id/linear3"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
